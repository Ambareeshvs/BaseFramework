@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Access Denied";
}
<div class="card">
    <div class="card-body login-card-body">
        <h1 class="text-danger">403 Access Denied</h1>
        <div class="">
            <div class="error-content">
                <h3><i class="fa fa-warning text-red"></i> Oops!</h3>
                <p>
                    You don't have permission to perform attempted action.
                </p>
                <br />
                <div class="d-flex">
                    <a href="/Account/Login?Area=Default" class="btnMenuLogOff btn btn-light-danger btn-sm"><i class="fas fa-chevron-circle-left"></i>&nbsp; &nbsp;Go Back</a>
                </div>
            </div>
        </div>
    </div>
</div>