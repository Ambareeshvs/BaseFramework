@model Frontend.DTO.Response.NewsResponseDTO

@{
    Layout = null;

    ViewData["Title"] = "AddNews";
}

<h1>Create News </h1>


<hr />
<div class="row">
    <div class="">
        <form asp-action="AddNews" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden="hidden">
                <label asp-for="NewsId" class="control-label"></label>
                <textarea asp-for="NewsId" class="form-control" readonly></textarea>
                <span asp-validation-for="NewsId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedAt" class="control-label"></label>
                <input asp-for="CreatedAt" class="form-control" readonly/>
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject" class="control-label"></label>
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control h-lg-150px" ></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="custom-file ">
                <label asp-for="Image" class="form-label custom-file-label"></label>
                <input asp-for="ImgFiles" class="form-control custom-file-input ">
            </div>
            <div class="form-group form-check" hidden="hidden">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group form-check" hidden="hidden">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                </label>
            </div>
            <div class="form-group" hidden="hidden">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AdminNewsView">Back to List</a>
</div>

