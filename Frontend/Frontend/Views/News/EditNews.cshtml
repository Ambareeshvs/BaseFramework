@model Frontend.DTO.Response.NewsResponseDTO

@{
    Layout = null;

    ViewData["Title"] = "EditNews";
}

<h1>Edit News</h1>


<hr />
<form asp-action="EditNews" enctype="multipart/form-data" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group" hidden="hidden">
        <label asp-for="NewsId" class="control-label"></label>
        <input asp-for="NewsId" class="form-control" />
        <span asp-validation-for="NewsId" class="text-danger"></span>
    </div>
    <div class="form-group" hidden="hidden">
        <label asp-for="CreatedAt" class="control-label"></label>
        <input asp-for="CreatedAt" class="form-control" />
        <span asp-validation-for="CreatedAt" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Subject" class="control-label"></label>
        <input asp-for="Subject" class="form-control" />
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content" class="control-label"></label>
        <textarea asp-for="Content" class="form-control h-lg-150px"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="col-sm-4 custom-file " hidden="hidden">
        <label asp-for="Image" class="form-label custom-file-label"></label>
        <input asp-for="@Model.Image" class="form-control custom-file-input">
    </div>
    <div class="col-sm-4 custom-file ">
        <label asp-for="Image" class="form-label custom-file-label"></label>
        <img src="~/Images/@Model.Image" style="height:100px;width:100%; object-fit:contain">

    </div>
    <div class="custom-file ">
        <label asp-for="Image" class="form-label custom-file-label"></label>
        <input asp-for="@Model.ImgFiles" class="form-control custom-file-input">
    </div>
    <div class="form-group form-check" hidden="hidden">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
        </label>
    </div>
    <div class="form-group form-check" hidden="hidden">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
        </label>
    </div>
    <div class="form-group" hidden="hidden">
        <label asp-for="UserId" class="control-label"></label>
        <input asp-for="UserId" class="form-control" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
