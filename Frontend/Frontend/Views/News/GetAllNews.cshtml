@using System.Security.Claims;
@model IEnumerable<NewsResponseDTO>
@{
    Layout = "_MenuLayout";

    ViewData["Title"] = "News";
    ViewBag.margin = "";
    var Image = "";
}


<style>
    #kt_wrapper {
        padding-top: 0px !important;
    }

    .content {
        margin-top: 70px
    }

</style>

<link href="~/css/news.css" rel="stylesheet" />

@if (User.FindFirstValue(ClaimTypes.NameIdentifier) != null)
{
    ViewBag.margin = " mt-10";
    <div class="toolbar">
        <div class="container-fluid d-flex flex-stack">
            <div data-kt-swapper="true" data-kt-swapper-mode="prepend" data-kt-swapper-parent="{default: '#kt_content_container', 'lg': '#kt_toolbar_container'}" class="page-title d-flex align-items-center flex-wrap me-3 mb-5 mb-lg-0">
                <h1 class="d-flex align-items-center text-dark fw-bolder fs-3 my-1"><b>@ViewData["Title"]</b></h1>
                <span class="h-20px border-gray-200 border-start mx-4"></span>
            </div>
            <div class="d-flex align-items-center py-1">
                <span class="h-20px border-gray-200 border-start mx-4"></span>

                @*<form class="" asp-action="" method="get" asp-controller="">
                    <div class="input-group">
                        <input type="text" name="search" class="form-control bg-light border-0 small" placeholder="Search for News..."
                           aria-label="Search" aria-describedby="basic-addon2">
                        <div class="input-group-append">
                            <button class="btn btn-primary btn-sm" type="submit">
                                <i class="fas fa-search fa-sm"></i>
                            </button>
                        </div>
                    </div>
                </form>*@
            </div>
        </div>
    </div>
}



<div class="card @ViewBag.margin" style="font-family:Bahnschrift;">
    <div class="flexgrid " style="margin-top:2rem;">
        <div class='container'>
            @foreach (var item in Model)
            {
                <div class='thing'>
                    <div class="example-2 card">
                        @{
                            Image = @item.Image;
                        }
                        <div class="wrapper" style="background:url(../Images/@item.Image) center / cover no-repeat;border-radius:5px;">
                            <div class="date">
                                <p>Published on @Html.DisplayFor(modelItem => item.CreatedAt)</p>



                            </div>
                            <div class="data">
                                <div class="content">
                                    <span class="author">
                                        <p>
                                            By
                                            @Html.DisplayFor(modelItem => item.User.firstName)
                                            @Html.DisplayFor(modelItem => item.User.lastName)
                                        </p>
                                    </span>
                                    <h1 class="title">
                                        <a href="#">
                                            <b>
                                                @Html.DisplayFor(modelItem => item.Subject)

                                            </b>
                                        </a>
                                    </h1>
                                    <p class="text">
                                        @Html.DisplayFor(modelItem => item.Content)
                                    </p>
                                    <a asp-action="SingleNews" asp-route-id="@item.NewsId" class="button">Read more</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
